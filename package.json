{
  "name": "interview-backend-engineer",
  "version": "1.0.0",
  "description": "Your task is to build a REST API in Node.js that returns data from sqlite database.",
  "main": "index.js",
  "scripts": {
    "start": "nodemon",
    "lint": "eslint src/index.js",
    "test:unit": "cross-env NODE_ENV=test mocha 'src/**/*.spec.js'",
    "test:unit:watch": "cross-env NODE_ENV=test mocha -w 'src/**/*.spec.js'",
    "test:unit:cov": "cross-env NODE_ENV=test nyc npm run test:unit",
    "doc:code": "jsdoc -d ./docs/html --debug -r \"./src/\" -t node_modules/minami -R ./README.md",
    "doc:api:folder": "mkdirp docs/api",
    "doc:api:create": "swagger-jsdoc -d swaggerDef.js -o docs/api/user-management-api.yml src/**/*.js",
    "doc:api:validate": "lint-openapi -d docs/api/user-management-api.yml",
    "doc:api:launch": "swagger-ui ./docs/api/user-management-api.yml",
    "doc:api": "npm run doc:api:folder && npm run doc:api:create && npm run doc:api:validate && npm run npm run doc:api:launch"
    
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amirsciammas/interview-backend-engineer.git"
  },
  "author": "Luca Saccone <luca.saccone@hach.com>",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.10",
    "@babel/node": "^7.17.10",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.17.10",
    "@babel/register": "^7.17.7",
    "chai": "^4.3.6",
    "class-validator": "^0.13.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.14.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "ibm-openapi-validator": "^0.76.0",
    "jsdoc": "^3.6.10",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-response-time": "^2.1.0",
    "koa-router": "^10.1.1",
    "minami": "^1.2.3",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.16",
    "nyc": "^15.1.0",
    "sqlite3": "^5.0.8",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-cli": "^0.11.1",
    "testdouble": "^3.16.5"
  },
  "mocha": {
    "require": "@babel/register",
    "extension": [
      "js"
    ],
    "reporter": "spec",
    "slow": 50,
    "timeout": 5000,
    "ui": "bdd"
  },
  "bugs": {
    "url": "https://github.com/amirsciammas/interview-backend-engineer/issues"
  },
  "homepage": "https://github.com/amirsciammas/interview-backend-engineer#readme",
  "dependencies": {}
}
